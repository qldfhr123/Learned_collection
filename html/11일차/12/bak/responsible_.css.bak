@charset "utf-8";

/*공통*/
@media screen and (max-width:768px){
   .inner{width:95%;}
}

/*visual slider*/
@media screen and (max-width:800px){ 
    .visual .inner{width:100%;}
}
@media screen and (max-width:480px){ 
    .visual ul li > div p:first-child{font-size:27px;}
}
@media screen and (max-width:430px){ 
    .visual ul li{
	    min-height: calc(100vh - 250px);
        height: calc(var(--vh, 1vh) * 100 -250px);
	}
}
@media screen and (max-width:385px){ 
    .visual ul li > div{padding:0 0 70px 20px;}
	.visual ul li > div p:first-child{font-size:21px;}
	.visual ul li > div p{font-size:16px;}
}
@media screen and (max-width:375px){ 
    .visual ul li{height:55vh;}
}

/*tag*/
@media screen and (max-width:580px){ 
    .tag ul li{padding:15px 20px; font-size:21px;}
}
@media screen and (max-width:395px){ 
    .tag ul li{padding:10px 15px; font-size:19px;}
}


/*quick*/
@media screen and (max-width:540px){ 
    .quick ul li{width:calc(100% / 5 - 40px); margin:0 20px;}
	.quick ul li p{font-size:17px;}
}
@media screen and (max-width:430px){ 
    .quick ul li{width:calc(100% / 5 - 20px); margin:0 10px;}
}
@media screen and (max-width:395px){ 
    .quick ul li{width:calc(100% / 5 - 12px); margin:0 6px;}
}
@media screen and (max-width:320px){
    .quick ul li{width:calc(100% / 5 - 8px); margin:0 4px;}
	.quick ul li p{font-size:15px;}
}

/*program*/
@media screen and (max-width:580px){
    .program ul li{width:calc(100% / 2 - 40px); margin:20px;}
    .program ul li p{line-height:145%;}
}
@media screen and (max-width:480px){ 
    .program ul li{width:calc(100% / 2 - 20px); margin:10px;}
    .program ul li p{line-height:145%;}
	.program ul li p b{font-size:20px;}
}
@media screen and (max-width:360px){
    .program ul li{font-size:16px;}
	.program ul li p b{font-size:18px;}
}

/*people*/
@media screen and (max-width:680px){ 
    .people > div.hot > div p br{display:block;}
	.people > ul li > div p{margin-top:10px;}
    .people > ul li > div p br{display:none;}
}
@media screen and (max-width:580px){
    .people > div.hot > span{width:100px; height:100px; font-size:25px; line-height:70px;}
    .people > div.hot > span p{line-height:0; margin-top:-5px;}
	 
	.people > div.hot > div span{top:30px; width:90px; height:40px; line-height:40px; font-size:23px;}
	.people > div.hot > div p{font-size:23px;}
    .people > div.hot > div p b{font-size:29px;}

	.people > ul li > div span{width:80px; height:30px; line-height:30px; font-size:17px;}
    .people > ul li > div p{font-size:17px;}
    .people > ul li > div p b{font-size:21px;}
}
@media screen and (max-width:480px){
    .people > div.hot > span{width:80px; height:80px; font-size:21px; line-height:55px;}
    .people > div.hot > span p{line-height:0;}

	.people > div.hot > div span{width:80px; height:35px; line-height:35px; font-size:19px;}
	.people > div.hot > div p{font-size:19px;}
    .people > div.hot > div p b{font-size:25px;}

	.people > ul li > div span{width:60px; height:25px; line-height:25px; font-size:15px;}
    .people > ul li > div p{font-size:17px; margin-top:5px;}
    .people > ul li > div p b{font-size:21px;}
}
@media screen and (max-width:430px){
    .people > div.hot > div p br{display:none;}
	.people > div.hot > div span{left:30px;}
	.people > div.hot > div p{margin-top:60px;}
	.people > div.hot > div p + p{margin-top:7px;}

	.people > ul li > div p + p{display:none;}
}
@media screen and (max-width:360px){
    .people > div.hot > div p br{display:none;}
	.people > ul li > div p b{font-size:17px;}
}