@charset "UTF-8";

*{font-family:"verdana"}
/* *{}전체적용 */

body{margin:0; padding:0;}
a{color:#555; text-decoration:none;}
article{line-height:1.5; margin: 0 250px 30px 30px;}
/*line-height: 1.5ㅣ 1.5배수*/

body > header h1 a {color:#ff6633;}
h1{float:left; padding:0 2%;}
body > header p {clear:both; padding-left:20px;}

body > article {padding:0 25px 0 50px; border: 1px solid #333; border-radius:30px; webkit-border-radius:30px;  -moz-border-radius:30px; background:#f5f5f5;}
body > article header{font-size:150%; margin-bottom:10px;}
body > article h2 {font-style:italic; border-bottom:1px solid red; margin:0; text-indent:-30px;}

/*text-indent 들여쓰기*/
article header + strong{float:right; background:red; color:#fff;}
 article footer {text-align:right;}




































