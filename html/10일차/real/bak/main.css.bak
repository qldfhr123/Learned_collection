@charset "UTF-8";

#wrap {width:1200px; margin:0 auto;}
.header {position:relative;}
.header ul {font-size:0; position:absolute;top:25px; right:0;}
.header ul li {display:inline-block;font-size:12px;width:130px;text-align:center;border-right:1px solid #c2c2c2;}
.header ul li:nth-child(4){width:195px;}
.header ul li:nth-child(6){width:160px;}
.header ul li:last-child{border-right:0;}
.header ul li > a h2{letter-spacing:-1px;}
.header ul li > a p{color:#c2c2c2;}

.header_issue {height:36px;width:100%; border:1px solid #c2c2c2;position:relative;line-height:36px;}
.header_issue > b {color:#c80203;padding-right:35px;padding-left:27px;}
.header_issue > span{color:#646464;}
.header_issue ul {font-size:0; position:absolute;top:0px; right:0;}
.header_issue ul li {display:inline-block;}

.visual.bg{position:relative; background:url(../image/main/visual.jpg) no-repeat center center;height:429px;margin-top:39px;margin-bottom:39px;}
.visual > div {position:absolute;bottom:65px; left:53px;}
.visual > div h2{color:#fff;font-size:35px;font-weight:500;}
.visual > div p{color:#fff;font-size:25px;line-height:30px;font-weight:100;}


.content {width:100%;display: flex; flex-direction: center; border-bottom:1px solid #dbdbdb; padding-bottom:50px;}
.content .left{width:450px; }
.content .left  > ul {padding-top: 22px; display:block;}
.content .left  > ul a img {padding-right:8px;}
.content .left  > ul li a img,
.content .left  > ul li a > h2{float:left;}
.content .left  > ul li a > h2 {font-size:14px; font-weight:450;}
.content .left  > ul li a > h2 p {font-size:14px;color:#757575;padding-top:6px;font-weight:100;}
.content .left  > ul li a {line-height:17px;}
.content .left  > ul li:nth-child(1) a > h2 {padding-right:10px;}
.content .left  > ul li:nth-child(3) a > img{padding-top:10px;}
.content .left  > ul li:nth-child(3) a > h2 {padding-right:23px; padding-top:10px;}

.content .left  > ul li:nth-child(4) a > img{padding-top:10px;}
.content .left  > ul li:nth-child(4) a > h2 {padding-top:10px;}

.content .center {width:440px;margin-left:12px;  margin-right:15px;  }
.content .center.bg2 {background:url(../image/main/img1.jpg) no-repeat center center; height:401px; position:relative;}
.content .center > a span {position:absolute; left:20px; top:20px; color:#fff;}
.content .center div {position:absolute; left:145px; bottom:20px; color:#fff; opacity:0.8;font-size:20px;}
.content .center div img {position:absolute; left:-50px; bottom:15px;}
.content .center div > p {text-align:center; font-family:'KOTRAHOPE';}
.content .rigth {width:282px; text-align:center;}
.content .rigth .r_top {width:100%; height:193px;margin-bottom:17px; background:#3f68c4; color:#fff;
display: flex; flex-direction: column; align-items: center;}
.content .rigth .r_top h2 {font-weight:500; font-size:20px;padding-top:23px; padding-bottom:18px;}
.content .rigth .r_top span {font-size:15px; padding-bottom:17px;}
.content .rigth .r_top a p {font-size:13px; width:102px; height:35px; line-height:35px; background:#fff; color:#3f68c4; border-radius:20px;}

.content .rigth .r_bottom {width:100%; height:193px; margin-bottom:17px; background:#e9e9e9; display: flex;
flex-direction: column; align-items: center; color:#000;}
.content .rigth .r_bottom h2 {font-weight:500; font-size:20px;padding-top:23px; padding-bottom:18px;}
.content .rigth .r_bottom span {font-size:15px; padding-bottom:17px;}
.content .rigth .r_bottom a p {font-size:13px; width:102px; height:35px; line-height:35px; background:#fff; color:#000; border-radius:20px;}

.info {width:100%;display: flex; flex-direction: center; border-bottom:1px solid #dbdbdb; padding-bottom:45px;}
.info .news {width:665px; position:relative; margin-right:30px;border-right:1px solid #dbdbdb; }
.info .news h2 {padding-top:40px;padding-bottom:17px; color:#3d7dc4; font-weight:300;}
.info .news > span{float:left; width:19px; height:1px; background:#000;}
.info .news > a span{position:absolute; top:70px; right:0; font-size:30px; opacity:0.5;}
.info .news ul {padding-top:23px;}
.info .news ul li {display:inline-block; box-sizing: border-box;}
.info .news ul li:nth-child(2){padding: 0 8px;}
.info .news ul li a > h2 {color:#000; font-weight:500;font-size:15px;line-height:20px; padding-top:20px;padding-bottom:0;}
.info .news ul li a > p {color: #888888; font-size:13px;padding-top:10px;}
.info .news ul li a > p:last-child{font-size:12px;}

.info .notice{width:535px; position:relative;} 
.info .notice > h2 {padding-top:40px;padding-bottom:17px; color:#3d7dc4; font-weight:300;}
.info .notice > span{float:left; width:19px; height:1px; background:#000;}
.info .notice > a span{position:absolute; top:70px; right:0; font-size:30px; opacity:0.5;}
.info .notice ul {position:absolute; left:0; top:100px;padding-top:30px;}
.info .notice ul li {float:left;padding-bottom:45px;}
.info .notice ul li > h2 {font-size:18px; font-weight:400;}
.info .notice ul li p {color: #888888; font-size:13px;}

.info .notice ul li p:las-child{font-size:12px;}
.info .notice ul li:last-child{border-top:1px solid #dbdbdb;padding-top:45px;}

.etc{width:100%; display: flex; flex-direction: center; border-bottom:1px solid #dbdbdb;}
.etc .goods{width:75%; background:#f4f4f4;padding-top:30px; padding-left:30px;}
.etc .goods h2 {padding-bottom:18px; color:#3d7dc4; font-weight:300;}
.etc .goods > span{float:left; width:19px; height:1px; background:#000;}
.etc .goods > ul {margin-top:40px;}

.etc .goods > ul li a img {margin-right: 10px;}
.etc .goods > ul li {display: flex; flex-direction: column; }
.etc .goods > ul li a > img{float:left;}

.etc .goods > ul li a > h4 {font-size:18px;padding-top:10px;font-weight:400;}
.etc .goods > ul li a > h4 > p {font-size:13px;}
.etc .goods > ul li a > h4 > p:last-child{padding-top:20px;}
.etc .goods > ul li:nth-child(2){padding: 40px 0;}

.etc .sns{width:25%;}
.etc .sns {padding-top:30px; padding-left:30px;}
.etc .sns > h2 {padding-bottom:18px; color:#3d7dc4; font-weight:300;}
.etc .sns > span{float:left; width:19px; height:1px; background:#000;}
.etc .sns > ul {padding-top:30px;}
.etc .sns > ul li p{width:270px;  height:109px; padding:22px 15px; border:1px solid #d1d1d1;font-size:14px;line-height:25px;} 
.etc .sns > ul li div {padding-top:25px;display:block;}
.etc .sns > ul li div {display: flex; flex-direction: center;}
.etc .sns > ul li div span { padding-left:10px; padding-top:10px; display:block;}
.etc .sns > ul li:nth-child(2) {padding: 15px 0;}

.etc .sns > ul li:nth-child(2) p,
.etc .sns > ul li:nth-child(3) p {height:60px;}

.etc .sns > ul li:nth-child(3) div { padding-bottom:45px;}


.footer{width:100%; padding-top:52px; display: flex; flex-direction: center; color:#929292 }
.footer p {line-height:18px; font-size:12px; padding-top:3px;}
.footer > img {padding-right:15px;}

.footer .f_r {position:relative;}
.footer .f_r ul {position:absolute; right:-637px; top:0px; font-size:0;}
.footer .f_r ul li{display:inline-block; padding-left:3px;}
















