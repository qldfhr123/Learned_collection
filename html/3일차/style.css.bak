.wrap .right{float:left; height:800px; box-sizing:border-box; -webkit-box-sizing:border-box;}

.wrap .left{width:60%; background:;}
.wrap .right{width:40%; background:; padding-left:30px;}

.left h4,
.left h4{color;#222; letter-spacing:-1px; padding-bottom:20px;}

.right h4,
