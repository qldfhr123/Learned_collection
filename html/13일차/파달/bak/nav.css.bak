@charset "utf-8";

.nav{width:100%; height:70px; line-height:70px; z-index:99999999999;}
.nav-list{padding:0; list-style:none; position:absolute; right:0; top:10px;}
.nav-list a{display:block; zoom:1;}
.nav-list > li{float:left; width:auto; padding:0 40px;}
.nav-list > li > a{font-size:19px; color:#fff; letter-spacing:-1px;}
.nav-list > li > a:hover{color:#ffcc00;}

.mNav{position:absolute; right:2%; top:35%; z-index:99999999999;}
.mNav a{display:block; width:40px; height:40px;}
.mNav a span{display:block; background:#fff; width:100%; height:3px; margin-bottom:10px;}

/*******************************************************************************/
/*responsive*/
@media screen and (max-width:1024px){
    .nav{display:none;}
    #mobile_menu{display:block;}
	#mobile_menu h1{padding-left:20px;}
}
@media screen and (max-width:420px){
	#mobile_menu h1{padding-left:0; text-indent:-10px;}
	#mobile_menu h1 a img{transform:scale(0.8); -webkit-transform:scale(0.8); -moz-transform:scale(0.8);}
	.mNav a{display:block; width:34px; height:30px;}
	.mNav a span{margin-bottom:8px;}
}